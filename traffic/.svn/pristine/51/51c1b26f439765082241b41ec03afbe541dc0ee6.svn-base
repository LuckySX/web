<template>
  <div :class="Layout.container">
    <!-- 未登录 -->
    <!-- 已登录 -->
    <section :class="Layout.appMain" v-if="loginState">
      <!-- <MenuIndex v-if="key == '/menuIndex'"></MenuIndex> -->
      <div :class="Layout.header">
        <!-- header组件 -->
        <sysHeader></sysHeader>
      </div>
      <div :class="Layout.main">
        <div :class="Layout.leftMenu">
          <!-- 导航组件 -->
          <MenuForm @change="loginStatus" v-if="key !== '/menuIndex' && key !== '/login'"></MenuForm>
        </div>
        <div :class="Layout.rightContent">
          <div :class="Layout.topBread">{{ routeName }}</div>
          <div :class="Layout.bottomContent">
            <transition name="fade-transform" mode="out-in">
              <keep-alive>
                <router-view :key="key" v-if="$route.meta.keepAlive"></router-view>
              </keep-alive>
            </transition>
            <transition name="fade-transform" mode="out-in">
              <router-view :key="key" v-if="!$route.meta.keepAlive"></router-view>
            </transition>
          </div>
        </div>
      </div>
    </section>
    <sysLogin :class="Layout.appMain" v-else @change="loginStatus"></sysLogin>
  </div>
</template>

<script lang="ts">
// @ is an alias to /src
import { Component, Vue, Watch } from 'vue-property-decorator'
import { State, Getter, Action, Mutation, namespace } from 'vuex-class'
import MenuIndex from '@/views/Layout/MenuIndex.vue'
import MenuForm from '@/views/Layout/MenuForm.vue'
import sysHeader from './Layout/Header.vue'
import sysLogin from './Layout/Login.vue'
import { setCookies, getCookies } from '@/utils/cookiesUtil'

const userModuleVuex = namespace('user')
@Component({
  components: {
    MenuIndex,
    MenuForm,
    sysHeader,
    sysLogin
  }
})
export default class Layout extends Vue {
  private pageFlag = ''
  private isLogin = false
  private ip = ''
  private loginStatus(status: boolean) {
    this.isLogin = status
  }
  @userModuleVuex.Getter('getLoginState') loginState
  get key() {
    return this.$route.path
  }
  get routeName() {
    const routePath = this.$route.path
    const name = this.$route.name === null || this.$route.name === undefined ? '' : this.$route.name
    let rName = ''
    switch (true) {
      case routePath === '/DDosDetails':
        rName += `DDoS攻击事件${this.$route.query.ip}-${this.$route.query.number}详情`
        break
      case this.$route.meta.parentName != null:
        rName += `${this.$route.meta.parentName}/${this.$route.name}`
        break
      case routePath === '/menuIndex':
        rName = ''
        break
      default:
        rName += name
        break
    }
    return rName
  }
  getLogin() {
    return getCookies('szCode')
  }
  mounted() {}
}
</script>

