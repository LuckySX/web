<template>
  <div :class="webList.listBox">
    <webContent :index="index" :data="data" :days="dayOut" :showButton="true" type="content" @showBig="showBig" @changeDays="changeDays"></webContent>
    <el-dialog :visible.sync="showDialog" width="95%" top="20px" :class="webList.dialogBox">
      <div :style="dialogHeight()">
        <webContent :index="index" :data="data" :days="days" :showButton="false" type="dialog" @changeDays="changeDays"></webContent>
      </div>
    </el-dialog>
  </div>
</template>

<script lang="ts">
import { Component, Vue, Prop, Watch } from 'vue-property-decorator'
import webContent from './webContent.vue'
@Component({
  components: {
    webContent
  }
})
export default class WebList extends Vue {
  // 返回的data对象
  @Prop() private data: object
  // 序号
  @Prop() private index: number
  @Watch('showDialog', { deep: true })
  private dataChanged(val) {
    if (val) {
      this.days = 7
    }
  }
  private showDialog = false
  private days = 7
  private dayOut = 7
  private showBig(data: boolean) {
    this.showDialog = data
  }
  private changeDays(data: number, type: string) {
    if (type === 'content') {
      this.dayOut = data
    } else {
      this.days = data
    }
  }
  dialogHeight() {
    const winHeight: number = document.body.offsetHeight
    const dialogHeight: number = winHeight - 150
    return {
      height: dialogHeight + 'px'
    }
  }
}
</script>

<style module="webList">
.listBox {
  width: 100%;
  height: 100%;
}
.dialogBox {
  height: 95%;
}
</style>
