/*
 overide ElementUI css  create by fuping 2020-3-20
*/

/*
form 表单override
*/
.el-form-item {
  margin-bottom: 0;
  margin-right: 30px;
}

.el-form-item .el-input,
.el-form-item .el-input__inner {
  width: 140px;
}

/*.el-form-item .el-date-editor .el-input, .el-form-item .el-date-editor .el-input__inner {
  width: 180px;
}*/

.el-input__inner {
  height: 24px;
  line-height: 24px;
  border-radius: 0;
}

.el-input--suffix .el-input__inner {
  padding-right: 5px;
}

.el-form-item__label {
  padding: 0;
}

.el-button {
  height: 24px;
  line-height: 23px;
  padding: 0px 20px;
  border-radius: 1.5px;
  background: #0062FF;
  border-color: #0062FF;
  font-size: 12px;
  width: 90px;
  box-sizing: border-box;
}

.el-button--primary.is-plain {
  color: #0062FF;
  background: #fff;
  border-color: #0062FF;
  margin-right: 20px;
}

.el-button--primary.is-plain:hover {
  color: #fff;
  background: #0062FF;
  border-color: #0062FF;
}

/*
table 表单override
*/
.el-table th {
  background: rgba(0, 98, 255, 0.05);
}

.el-table thead {
  color: rgba(0, 0, 0, .8);
}

.el-table {
  color: rgba(0, 0, 0, .75);
}

.el-table__body tr.current-row>td {
  color: #efb414;
}

.el-table th.is-leaf {
  background: #f2f6fe;
}

.el-breadcrumb {
  font-size: 15px;
}

span.el-breadcrumb__inner {
  color: #000 !important;
}

.el-breadcrumb__separator {
  color: #000 !important;
}

.el-input__inner {
  color: #666;
  background: #FFFFFF;
  border: 1px solid #DCDCDC;
  border-radius: 2px;
  border-radius: 2px;
}

.el-select .el-input .el-select__caret {
  color: #0062FF;
}

input[type=text]::-webkit-input-placeholder {
  color: rgba(0, 0, 0, .5);
}

.el-form-item__label {
  color: rgba(0, 0, 0, .75);
}

.el-input__prefix,
.el-input__suffix {
  color: #3762ff;
}

.el-input__prefix,
.el-input__suffix {
  color: #3762ff;
}

.el-date-editor .el-icon-circle-close {
  display: none;
}

.el-input__icon {
  line-height: 43px;
}

.el-select-dropdown {
  border: 1px solid #3762ff;
}

.el-table td,
.el-table th {
  padding: 5px 0;
}

/* dialog */
.el-menu--collapse {
  width: 40px;
}

.el-menu {
  background-color: #04388c;
  text-align: left;
}

.el-submenu__title:hover {
  background-color: #3097f1;
}

.el-menu-item:focus,
.el-menu-item:hover {
  background-color: #0073d8;
}

.el-submenu.is-active>.el-submenu__title {
  background-color: #3097f1;
  font-weight: bold;
}

.el-submenu .el-submenu .el-submenu__title {
  font-weight: normal;
  font-size: 14px;
}

.el-submenu__title {
  border-bottom: 1px solid #010f56;
  color: #fff;
  font-size: 16px;
}

.el-menu--vertical .el-submenu__title {
  font-size: 14px;
}

.el-menu-item {
  color: #fff;
}

.el-menu-item.is-active {
  color: #fff;
  background-color: #0073d8;
}

.el-menu-item,
.el-submenu__title {
  height: 40px;
  line-height: 40px;
}

.el-submenu .el-menu-item,
.el-submenu .el-submenu .el-submenu__title {
  height: 30px;
  line-height: 30px;
  border-bottom: 1px solid #010f56;
}

.el-menu--vertical .el-submenu .el-menu-item {
  height: 40px;
  line-height: 40px;
  border-bottom: none;
}

.el-submenu__title i {
  color: #fff;
  font-size: 14px;
}

/*实时监测table*/
.sz .el-table {
  font-size: 12px;
  color: #fff;
  background: transparent;
}

.sz .el-table td,
.sz .el-table th {
  padding: 3px 0;
}

.sz .el-table th,
.sz .el-table tr {
  background-color: transparent;
}

.sz .el-table thead {
  color: #fff;
  background: #004B9C;
}

.sz .el-table--striped .el-table__body tr.el-table__row--striped td {
  background: transparent;
}

.sz .el-table td,
.sz .building-top .el-table th.is-leaf {
  border-bottom: 1px solid transparent;
}

.sz .el-table--enable-row-hover .el-table__body tr:hover>td {
  background-color: #7bc1ff;
}

.sz .el-table td,
.sz .el-table th.is-leaf {
  border-bottom: 1px solid transparent;
}

.sz .el-table__body tr.current-row>td {
  background-color: transparent;
}

/*
 * 单选组radio
 */
.el-radio {
  margin-right: 24px;
}

.el-radio__inner {
  border: 1px solid #2593f2;
}

.el-radio__input.is-checked .el-radio__inner {
  border-color: #2593f2;
  background: #fff;
}

.el-radio__inner::after {
  width: 8px;
  height: 8px;
  background-color: #2593f2;
}

.el-radio__input.is-checked+.el-radio__label {
  color: #666666;
}

/* 按钮 */
.el-button {
  background: #2593F2;
  border-color: #2593F2;
}
